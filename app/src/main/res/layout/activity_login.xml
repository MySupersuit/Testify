<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoginActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_loading_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/spotify_black"
            android:visibility="visible">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@color/spotify_green"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/loading_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/logging_in_message"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/progress_bar"
                tools:text="Loading..." />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        <androidx.constraintlayout.widget.ConstraintLayout-->
        <!--            android:id="@+id/main"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            android:background="@color/spotify_black">-->

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:background="@color/spotify_black"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/spotify_logo_login"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/horizontal_margin"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:src="@drawable/spotify_logo_green" />

            <TextView
                android:id="@+id/login_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginHorizontal="@dimen/horizontal_margin"
                android:layout_weight="2"
                android:fontFamily="@font/gotham_medium"
                android:gravity="center"
                android:lineSpacingExtra="10dp"
                android:text="@string/login_message"
                android:textColor="@color/spotify_white"
                app:autoSizeMaxTextSize="60sp"
                app:autoSizeTextType="uniform"
                android:maxLines="4"
                app:autoSizeMinTextSize="50sp"
                android:textStyle="bold"
                tools:text="How well do you know your Spotify?" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/horizontal_margin"
                    android:background="@drawable/rounded_corners"
                    android:paddingVertical="4dp"
                    android:text="@string/login"
                    android:textColor="@color/spotify_white"
                    app:autoSizeMaxTextSize="50dp"
                    app:autoSizeMinTextSize="15dp"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:layout_editor_absoluteX="30dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <!--        </androidx.constraintlayout.widget.ConstraintLayout>-->

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>