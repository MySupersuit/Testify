<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".beat_the_intro_game.BeatTheIntroFragment">

    <data>

        <variable
            name="viewModel"
            type="com.tom.spotifygamev3.beat_the_intro_game.BeatTheIntroViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/loading_progress_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <!--            app:spotifyApiProgress="@{viewModel.status}">-->

            <ProgressBar
                android:id="@+id/loading_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/beat_intro_loading_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loading_progress_bar"
                tools:text="Loading..." />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/beat_intro_game_cl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">
            <!--            app:showHighLowQuiz="@{viewModel.status}">-->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/beat_intro_progress_cl"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/beat_intro_game_score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/beat_intro_score_counter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="25sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="0/10" />

                    <ImageView
                        android:id="@+id/beat_intro_checkmark"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="30dp"
                        android:src="@drawable/checkmark"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/beat_intro_score_counter"
                        app:layout_constraintEnd_toStartOf="@id/beat_intro_score_counter"
                        app:layout_constraintTop_toTopOf="@id/beat_intro_score_counter" />

                    <ImageView
                        android:id="@+id/beat_intro_cross"
                        android:layout_width="30dp"
                        android:layout_height="0dp"
                        android:layout_marginStart="30dp"
                        android:src="@drawable/x_mark"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="@id/beat_intro_score_counter"
                        app:layout_constraintStart_toEndOf="@id/beat_intro_score_counter"
                        app:layout_constraintTop_toTopOf="@id/beat_intro_score_counter" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="100dp"
                    android:max="100"
                    android:progress="0"
                    android:progressDrawable="@drawable/music_progress_bar"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/beat_intro_progress_cl">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <Button
                        android:id="@+id/answer_1"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:onClick="@{() -> viewModel.onAnswerClick(0)}"
                        android:padding="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="Answer 1" />

                    <Button
                        android:id="@+id/answer_2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:onClick="@{() -> viewModel.onAnswerClick(1)}"
                        android:padding="5dp"
                        app:layout_constraintTop_toBottomOf="@id/answer_1"
                        tools:text="Answer 2" />

                    <Button
                        android:id="@+id/answer_3"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:onClick="@{() -> viewModel.onAnswerClick(2)}"
                        android:padding="5dp"
                        app:layout_constraintTop_toBottomOf="@id/answer_2"
                        tools:text="Answer 3" />

                    <Button
                        android:id="@+id/answer_4"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="10dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:onClick="@{() -> viewModel.onAnswerClick(3)}"
                        android:padding="5dp"
                        app:layout_constraintTop_toBottomOf="@id/answer_3"
                        tools:text="Answer 4" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>