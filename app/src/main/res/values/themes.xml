<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpotifyGameV3" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/spotify_black</item>
        <item name="colorPrimaryVariant">@color/spotify_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/spotify_black</item>
        <item name="android:textColor">@color/spotify_white</item>
        <item name="android:textViewStyle">@style/GothamTextViewStyle</item>
        <item name="buttonStyle">@style/GothamButtonStyle</item>
    </style>

    <style name="GothamTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/gotham_medium</item>
    </style>

    <style name="GothamButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/rounded_corners</item>
    </style>
</resources>